@startuml Process Explorer
!include https://raw.githubusercontent.com/plantuml-stdlib/C4-PlantUML/master/C4_Container.puml
!define DEVICONS https://raw.githubusercontent.com/tupadr3/plantuml-icon-font-sprites/master/devicons
!include DEVICONS/angular.puml

System_Boundary(c1, "Some Process"){
    Container(process, "InfoAggregator", "Environment Variables, Loaded modules, Registrations, Connections", "Collects the Data and sends to the Process Explorer backend")
}

System_Boundary(c12, "Some Process 2"){
    Container(process2, "InfoAggregator", "Environment Variables, Loaded modules, Registrations, Connections", "Collects the Data and sends to the Process Explorer backend")
}

System_Boundary(c13, "Some Process 3"){
    Container(process3, "InfoAggregator", "Environment Variables, Loaded modules, Registrations, Connections", "Collects the Data and sends to the Process Explorer backend")
}

System_Boundary(dotdotdot, "... another processes"){
    Container(dotdotdotprocess, "InfoAggregator", "Environment Variables, Loaded modules, Registrations, Connections", "Collects the Data and sends to the Process Explorer backend")
}

System_Boundary(c2, "Main Process"){
    Container(mainProcess, "InfoCollector", "Environment Variables, Loaded modules, Registrations, Connections, User, Machine information and Related processes to the Compose", "Collects the information from InfoAggregator and creates an instance of ProcessMonitor to collect continuously the related processes and sends it to the frontend")
}

Container(frontend, "Process Explorer UI", $sprite="angular")

Person(user, "User")

Rel(process, mainProcess, "Sends information/changes", "MessageRouter")
Rel(process2, mainProcess, "Sends information/changes", "MessageRouter")
Rel(process3, mainProcess, "Sends information/changes", "MessageRouter")
Rel(dotdotdotprocess, mainProcess, "Sends information/changes", "MessageRouter")
Rel_D(mainProcess, frontend, "Sends information/changes", "MessageRouter")
Rel_U(frontend, mainProcess, "Sends commands", "MessageRouter")
Rel_U(user, frontend, "Requests")
Rel_D(frontend, user, "Shows output")
@enduml